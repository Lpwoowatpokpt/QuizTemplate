<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".UI.MultiplayerActivity">


        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:cardCornerRadius="8dp"
            tools:ignore="UnusedAttribute">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:scrollbars="horizontal"
                    android:id="@+id/recyclerAvatars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/randomGameBtn"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:elevation="8dp"
                    android:textStyle="bold"
                    android:text="@string/play_random"
                    android:background="@drawable/btn_highlight_background"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/inviteFriendButton"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:elevation="8dp"
                android:textStyle="bold"
                android:background="@drawable/btn_highlight_background"
                android:textColor="@android:color/white"
                android:text="@string/invite_friend"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>