<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Widget.TextView.CustomBlack</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.CustomLight</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textViewStyle">@style/Widget.TextView.CustomWhite</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.CustomDark</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="alertDialogTheme">@style/MyDialogueDark</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="radioButtonStyle">@style/RadioButtonDark</item>
    </style>



    <style name="RadioButtonDark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TextViewSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background" tools:ignore="PrivateResource">@color/cardview_dark_background</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="MyDialogueDark" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@color/alertDialogueDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F44336</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.CustomLight">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.CustomDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
    </style>


    <style name="CardViewStyleDark" parent="CardView">
        <item name="cardBackgroundColor" tools:ignore="PrivateResource">@color/cardview_dark_background</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CardViewStyleLight" parent="CardView">
        <item name="cardBackgroundColor" tools:ignore="PrivateResource">@color/cardview_light_background</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.TextView.CustomBlack" parent="android:Widget.TextView">
        <item name="android:textColor">#141414</item>
    </style>

    <style name="Widget.TextView.CustomWhite" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
